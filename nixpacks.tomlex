# nixpacks.toml — Configuración minimalista para Coolify + Vite

[phases.setup]
nixPkgs = ["nodejs_20"]

[phases.install]
cmds = ["npm install"]

[phases.build]
cmds = ["npm run build"]

[start]
cmd = "npm run start"

[variables]
NODE_ENV = "production"
PORT = "3000"
HOST = "0.0.0.0"

[healthcheck]
path = "/"
port = 3000
interval = "30s"
timeout = "10s"
retries = 3
start_period = "20s"